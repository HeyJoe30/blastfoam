            mu              0;              // Viscosity
            Pr              1;              // Prandtl number
        }
        thermodynamics
        {
            Cv              1400;           // Heat capacity
            Hf              0.0;
        }
    }

    activationModel linear;
    initiation
    {
        E0          10.8e9;
        points     ((0 0.1143 0));
        vDet       9000;
    }

    residualRho     1e-6;           // Minimum density of the phase
    residualAlpha   1e-10;          // Minimum volume fraction used for division
}

