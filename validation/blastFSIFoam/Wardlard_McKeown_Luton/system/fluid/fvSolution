FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho|rhoE|rhoU)"
    {
        solver diagonal;
    }

    "(U|cellDisplacement|e)"
    {
        solver          PBiCGStab;
        preconditioner  DIC ;
        tolerance       1e-6;
        relTol          0;
        minIter         1;
    }
}


