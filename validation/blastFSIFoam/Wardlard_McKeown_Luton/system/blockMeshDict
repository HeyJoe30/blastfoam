FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1; // feet to meters

theta   #calc "5.0*Foam::constant::mathematical::pi/180.0";

Ri       0.04445;
xip      #calc "$Ri*cos($theta)";
xin      #calc "-$Ri*cos($theta)";

Ro       0.0508;
xop      #calc "$Ro*cos($theta)";
xon      #calc "-$Ro*cos($theta)";


Y       0.2286;

zip     #calc "$Ri*sin($theta)";
zin     #calc "-$Ri*sin($theta)";
zop     #calc "$Ro*sin($theta)";
zon     #calc "-$Ro*sin($theta)";

vertices
(
    (0 0 0)
    ($xip 0 $zin)
    ($xop 0 $zon)
    ($xop $Y $zon)
    ($xip $Y $zin)
    (0 $Y 0)

    ($xip 0 $zip)
    ($xop 0 $zop)
    ($xop $Y $zop)
    ($xip $Y $zip)
);

blocks
(
    hex (0 1 4 5 0 6 9 5) fluid (56 288 1) simpleGrading (1 1 1)
    hex (1 2 3 4 6 7 8 9) walls (8 288 1) simpleGrading (1 1 1)
 );

edges
(
);

boundary
(
    fixedWalls
    {
        type wall;
        faces
        (
            (5 4 9 5)
            (0 1 6 0)
            (4 3 8 9)
            (1 2 7 6)
        );
    }
    freeWall
    {
        type patch;
        faces
        (
            (2 3 8 7)
        );
    };

    front
    {
        type wedge;
        faces
        (
            (0 1 4 5)
            (1 2 3 4)
        );
    }
    back
    {
        type wedge;
        faces
        (
            (0 6 9 5)
            (6 7 8 9)
        );
    }
 );

mergePatchPairs
(
);

// ************************************************************************* //
