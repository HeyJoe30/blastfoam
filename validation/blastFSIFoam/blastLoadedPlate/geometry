scale 0.001;

standOff    150.0;
thickness   3.4;
plateWidth  203.0;
DoB         50.0;

angle   #calc "degToRad(1.0)";
cosAngle #calc "cos($angle)";
sinAngle #calc "sin($angle)";

x0  #calc "- $DoB";
x1  $standOff;
x2  #calc "$x1 + $thickness";
x3  #calc "$x2 + $DoB";

y0  0;
y1  #calc "$cosAngle * $plateWidth";
y2  #calc "$cosAngle * ($plateWidth + $DoB)";

z0  0;
z1  #calc "$sinAngle * $plateWidth";
z2  #calc "$sinAngle * ($plateWidth + $DoB)";

nz1  #calc "-$sinAngle * $plateWidth";
nz2  #calc "-$sinAngle * ($plateWidth + $DoB)";

vertices
(
    ($x0  $y0  $z0)         // 0
    ($x1  $y0  $z0)         // 1
    ($x2  $y0  $z0)         // 2
    ($x3  $y0  $z0)         // 3
    ($x0  $y1  $nz1)         // 4
    ($x1  $y1  $nz1)         // 5
    ($x2  $y1  $nz1)         // 6
    ($x3  $y1  $nz1)         // 7
    ($x0  $y2  $nz2)         // 8
    ($x1  $y2  $nz2)         // 9
    ($x2  $y2  $nz2)         // 10
    ($x3  $y2  $nz2)         // 11

    ($x0  $y1  $z1)         // 12
    ($x1  $y1  $z1)         // 13
    ($x2  $y1  $z1)         // 14
    ($x3  $y1  $z1)         // 15
    ($x0  $y2  $z2)         // 16
    ($x1  $y2  $z2)         // 17
    ($x2  $y2  $z2)         // 18
    ($x3  $y2  $z2)         // 19
);

dx  3.0;
dxPlate 0.5;

nx01    #calc "ceil( ($standOff + $DoB) / $dx)";
nx12    #calc "ceil($thickness / $dx)";
nx12Plate    #calc "ceil($thickness / $dxPlate)";
nx23    #calc "ceil($DoB / $dx)";

ny01    #calc "ceil($plateWidth / $dx)";
ny01Plate    #calc "ceil($plateWidth / $dxPlate)";
ny12    #calc "ceil($DoB / $dx)";
