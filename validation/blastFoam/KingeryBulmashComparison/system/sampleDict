FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sampleDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

setFormat raw;

interpolationScheme cell;

// Fields to sample.
fields
(
    overpressureMax
    impulseMax
    timeOfArrival
);


sets
(
    Centerline
    {
        type        lineCell;
        axis        x;

        start       (1 0 0);
        end         (10 0 0);
    }
);


surfaces ();

