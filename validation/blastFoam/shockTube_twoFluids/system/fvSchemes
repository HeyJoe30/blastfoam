FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme      HLLC;

ddtSchemes
{
    default         Euler;
    timeIntegrator  RK4SSP;
}

gradSchemes
{
    default         leastSquares;
}

divSchemes
{
    default         none;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default             linear;
    reconstruct(alpha)  quadraticMUSCL Minmod;
    reconstruct(rho)    quadraticMUSCL Minmod;
    reconstruct(U)      quadraticMUSCL Minmod;
    reconstruct(e)      quadraticMUSCL Minmod;
    reconstruct(p)      quadraticMUSCL Minmod;
    reconstruct(speedOfSound) quadraticMUSCL Minmod;
}

snGradSchemes
{
    default         corrected;
}


