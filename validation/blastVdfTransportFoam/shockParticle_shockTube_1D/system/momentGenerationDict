phases
(
    particles
);

boundaries
{
    inlet
    {
        type            zeroGradient;
        value           uniform 0;
    }

    outlet
    {
        type            zeroGradient;
    }

    defaultFaces
    {
        type            empty;
    }
}

particles
{
    type                weightsAndAbscissae;
    weightDimension     [0 0 0 0 0 0 0];
    abscissaDimension0  [0 1 0 0 0 0 0];
    abscissaDimension   [0 1 -1 0 0 0 0];

    default
    {}
    inlet
    {
        node0
        {
            weight      uniform 0;
            abscissae0  uniform 0;
            abscissae1  uniform 0;
        }
    }

    regions
    (
        boxToCell
        {
            box (0.015 0 0) (0.019 0.05 0.05);

            node0
            {
                weight      uniform 0.026e-2;
                abscissae0  uniform 10e-6;
                abscissae1  uniform 0;
            }
            node1
            {
                weight      uniform 0.026e-2;
                abscissae0  uniform 80e-6;
                abscissae1  uniform 0;
            }
        }
    );
}


