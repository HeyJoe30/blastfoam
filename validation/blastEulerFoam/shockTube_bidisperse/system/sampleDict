FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        system;
    object          sampleDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

setFormat raw;

surfaceFormat vtk;

interpolationScheme cell;

// Fields to sample.
fields
(
    alpha.particles0
    alpha.particles1
    U.particles0
    U.particles1
    U.gas
);


sets
(
    Centerline
    {
        type        lineCell;
        axis        x;

        start       (0 0.025 0.025);
        end         (0.06 0.025 0.025);
    }
);


surfaces ();

