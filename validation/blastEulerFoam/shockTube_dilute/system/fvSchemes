FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxSchemes
{
    gas
    {
        fluxScheme  Kurganov;
    }
    particles
    {
        fluxScheme          AUSM+Up;
        alphaMinFriction    0.5;
        alphaMax            0.63;
    }
}

ddtSchemes
{
    default         Euler;
    timeIntegrator  RKF45;
}

gradSchemes
{
    default         cellMDLimited leastSquares 1.0;
}

divSchemes
{
    default         none;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default cubic;
    reconstruct(alpha.gas)  vanAlbada;
    reconstruct(rho.gas)    vanAlbada;
    reconstruct(U.gas)      vanAlbadaV;
    reconstruct(e.gas)      vanAlbada;
    reconstruct(p.gas)      vanAlbada;
    reconstruct(c.gas)      vanAlbada;

    reconstruct(alpha.particles)  vanAlbada;
    reconstruct(rho.particles)    vanAlbada;
    reconstruct(U.particles)      vanAlbadaV;
    reconstruct(e.particles)      vanAlbada;
    reconstruct(p.particles)      vanAlbada;
    reconstruct(c.particles)      vanAlbada;
    reconstruct(Theta.particles)  vanAlbada;
}

snGradSchemes
{
    default         corrected;
}


