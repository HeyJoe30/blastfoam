FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    air_to_plate
    {
        type            coupledPointMotion;
        value           $internalField;
    }
    plateEnd
    {
        type            coupledPointMotion;
        value           $internalField;
    }
    left
    {
        type            slip;
    }
    right
    {
        type            slip;
    }
    outlet
    {
        type            slip;
    }

    wedge
    {
        type            wedge;
    }
}

// ************************************************************************* //
