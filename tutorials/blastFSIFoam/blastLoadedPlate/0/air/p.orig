FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p.orig;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 1e5;

boundaryField
{
    air_to_plate
    {
        type            zeroGradient;
    }
    plateEnd
    {
        type            zeroGradient;
    }
    left
    {
        type            pressureWaveTransmissive;
        value           $internalField;
    }
    right
    {
        type            pressureWaveTransmissive;
        value           $internalField;
    }
    outlet
    {
        type            pressureWaveTransmissive;
        value           $internalField;
    }
    wedge
    {
        type            wedge;
    }
}

