FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      D;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    plate_to_air
    {
        type            FSIForceDisplacement;
        pName           p;
        pRef            1e5;
        traction        uniform (0 0 0);
        value           uniform (0 0 0);
        pressure        uniform 0;
    }
    plateEnd
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    wedge
    {
        type            wedge;
        patchType       wedge;
        value           $internalField;
    }
}

