FoamFile
{
    version     2.0;
    format      ascii;
    class       pointScalarField;
    object      pointDisplacementx;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    air_to_flap
    {
        type            coupledPointMotion;
    }
    ground
    {
        type            slip;
    }
    outlet
    {
        type            slip;
    }
}

