FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
nBufferLayers 5;

defaultFieldValues
(
    volScalarFieldValue alpha.c4    0
);


regions
(
    cylinderToCell
    {
        p1 (-1 -1 0.5);
        p2 (-1 1 0.5);
        radius 0.025;
        backup
        {
            p1 (-1 -1 0.5);
            p2 (-1 1 0.5);
            radius 0.1;
        }
        refineInternal yes;
        level 5;

        fieldValues
        (
            volScalarFieldValue alpha.c4    1
        );
    }
);


