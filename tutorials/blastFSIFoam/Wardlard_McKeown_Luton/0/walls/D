FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      D;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    fixedWalls
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    freeWall
    {
        type            tractionDisplacement;
        traction        uniform (0 0 0);
        pressure        uniform 1e5;
        value           uniform (0 0 0);
    }
    walls_to_fluid
    {
        type            coupledSolidTraction;
        traction        uniform (0 0 0);
        pressure        uniform 0;
        pRef            1e5;
        value           uniform (0 0 0);
    }
    front
    {
        type            wedge;
    }

    back
    {
        type            wedge;
    }
}

// ************************************************************************* //
