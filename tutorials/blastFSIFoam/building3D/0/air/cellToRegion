FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0/air";
    object      cellToRegion;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    outlet
    {
        type            zeroGradient;
    }
    ground
    {
        type            zeroGradient;
    }
    air_to_building
    {
        type            calculated;
        value           uniform 0;
    }
}


