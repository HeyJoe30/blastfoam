FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxSchemes
{
    gas
    {
        fluxScheme  HLLC;
    }
    particles
    {
        fluxScheme          AUSM+Up;
        alphaMinFriction    0.5;
    }
}

ddtSchemes
{
    default         Euler;
    timeIntegrator  RK2SSP;
}

gradSchemes
{
    default         cellMDLimited leastSquares 1;
}

divSchemes
{
    default         none;
    div((((alpha.gas*rho.gas)*nuEff.gas)*dev2(T(grad(U.gas))))) Gauss linear;
    div(sigma.particles) Gauss linear;
    div(alphaRhoPhi.c4,lambda.c4) Riemann gas;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default             linear;
    "reconstruct\(alpha.*\)"  linearMUSCL Minmod;
    "reconstruct\(rho.*\)"  linearMUSCL Minmod;
    "reconstruct\(U.*\)"  linearMUSCL Minmod;
    "reconstruct\(e.*\)"  linearMUSCL Minmod;
    "reconstruct\(p.*\)"  linearMUSCL Minmod;
    "reconstruct\(speedOfSound.*\)"  linearMUSCL Minmod;
    "reconstruct\(Theta.*\)"  linearMUSCL Minmod;
    "reconstruct\(lambda.*\)"  linearMUSCL Minmod;
    "reconstruct\(tauMC\)" linearMUSCL Minmod;
}

snGradSchemes
{
    default         corrected;
}


