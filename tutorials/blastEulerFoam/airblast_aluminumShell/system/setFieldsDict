FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "system";
  object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
fields (alpha.aluminum alpha.c4);
nBufferLayers 1;

defaultFieldValues
(
    volScalarFieldValue alpha.aluminum  0
    volScalarFieldValue alpha.c4        0
    volScalarFieldValue alpha.air       1
);

regions
(
    sphereToCell
    {
        centre (0 0 0);
        radius 0.125;

        backup
        {
            centre (0 0 0);
            radius 0.5;
        }
        level 4;
        refineInternal no;

        fieldValues
        (
            volScalarFieldValue alpha.aluminum  0.6
            volScalarFieldValue alpha.c4        0
            volScalarFieldValue alpha.air       0.4
        );
    }
    sphereToCell
    {
        centre (0 0 0);
        radius 0.1;

        backup
        {
            centre (0 0 0);
            radius 0.5;
        }
        level 2;
        refineInternal yes;
        overwriteLevel yes;

        fieldValues
        (
            volScalarFieldValue alpha.aluminum  0
            volScalarFieldValue alpha.c4        1
            volScalarFieldValue alpha.air       0
        );
    }
    sphereToCell
    {
        centre (0 0 0);
        radius 0.01;

        backup
        {
            centre (0 0 0);
            radius 0.1;
        }
        level 4;
    }
 );

