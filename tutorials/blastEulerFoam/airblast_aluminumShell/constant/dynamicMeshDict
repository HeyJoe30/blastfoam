FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   adaptiveFvMesh;

// How often to refine
refineInterval  2;
beginUnrefine 5e-7;

// Field to be refinement on
errorEstimator  multicomponent;
estimators (density volumeFraction);

density
{
    errorEstimator densityGradient;

    // Refine field in between lower..upper
    lowerRefineLevel 1e-2;

    // If value < unrefineLevel unrefine
    unrefineLevel   1e-2;
}
volumeFraction
{
    errorEstimator delta;
    deltaField alpha.aluminum;

    // Refine field in between lower..upper
    lowerRefineLevel 0.1;

    // If value < unrefineLevel unrefine
    unrefineLevel   0.1;
}

// Have slower than 2:1 refinement
nBufferLayers   2;

// Refine cells only up to maxRefinement levels
maxRefinement   6;

// Write the refinement level as a volScalarField
dumpLevel       true;
// ************************************************************************* //
