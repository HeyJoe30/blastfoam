FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "system";
  object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
fields (alpha.particles)

defaultFieldValues
(
    volScalarFieldValue p               101000
    volScalarFieldValue alpha.particles 0
    volScalarFieldValue ignitor.gas     0
    volScalarFieldValue air.gas         1
);

regions
(
    boxToCell
    {
        box (-.1 -.1 -1) (.1 .1 1);
        level 2;

        fieldValues
        (
            volScalarFieldValue p               1e7
            volScalarFieldValue alpha.particles 0.3
            volScalarFieldValue ignitor.gas     0.1
            volScalarFieldValue air.gas         0.9
        );
    }
 );

