FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
errorEstimator densityGradient;

dynamicFvMesh   movingAdaptiveFvMesh;

// motionSolverLibs ("libblastFvMotionSolvers.so"); // Added by default to blastFoam

motionSolver    velocityComponentLaplacian;

component       x;
diffusivity     directional (1 200 0);

// How often to refine
refineInterval  5;

// Field to be refinement on
field           error;

// Refine field in between lower..upper (varies based on errorEstimator)
lowerRefineLevel 0.01;
upperRefineLevel 1e6;       // Should be very high for adaptiveFvMesh

// If value < unrefineLevel unrefine
unrefineLevel   0.01;

// Number of cells refined around high error cells
nBufferLayers   1;

// Refine cells only up to maxRefinement levels
maxRefinement  4;

// Stop refinement if maxCells reached
maxCells        10000000;

// Flux field and corresponding velocity field. Fluxes on changed
// faces get recalculated by interpolating the velocity. Use 'none'
// on surfaceScalarFields that do not need to be reinterpolated.
correctFluxes
(
    (phi none)
    (own none)
    (nei none)
    (rhoPhi none)
    (alphaPhi.air none)
    (alphaPhi.c4 none)
    (rhoPhi none)
    (alphaRhoPhi.air none)
    (alphaRhoPhi.c4 none)
    (rhoEPhi none)
    (rhoUPhi none)
);

// Write the refinement level as a volScalarField
dumpLevel       true;
// ************************************************************************* //
