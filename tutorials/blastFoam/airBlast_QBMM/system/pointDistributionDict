FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      pointDistributionDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (populationBalance);

populationBalance
{
    xMax    1e-5;
    xMin    1e-7;
    nSamples 10000;
    useMean false;
    probes
    {
        type            probes;

        // Name of the directory for probe data
        name            probes;

        // Write at same frequency as fields
        writeControl   timeStep;
        writeInterval  1;

        // Fields to be probed
        // Does not need to be filled, but is used to initialize probes
        fields
        ();

        probeLocations
        (
            ( 0.5 0.25 0 )
        );
    }
}

