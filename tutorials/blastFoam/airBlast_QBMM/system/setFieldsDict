FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
nBufferLayers 1;

//- Calc
rho     1601.0;
mass    10.0; // pounds
V       #calc "$mass/2.20462/$rho";
R       #calc "cbrt($V/4/3.141529*3)";

defaultFieldValues
(
    volScalarFieldValue alpha.c4 0
);


regions
(
    sphereToCell // Use cylinder for 3D
    {
        centre (-0.3048 0.3048 0);
        radius $R;
        backup
        {
            centre (-0.3048 0.3048 0);
            radius 0.25;
        }
        refineInternal yes;
        level 4;

        fieldValues
        (
            volScalarFieldValue alpha.c4    1
        );
    }
);


// ************************************************************************* //
